<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view5"
        android:layout_width="@dimen/dimen_125"
        android:layout_height="@dimen/dimen_125"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_20"
        android:background="@color/colorWhite"
        android:visibility="visible"
        card_view:cardCornerRadius="@dimen/dimen_15"
        card_view:cardElevation="3dp">

        <ImageView
            android:layout_width="@dimen/dimen_125"
            android:layout_height="@dimen/dimen_125"
            android:scaleType="fitXY"
            android:background="@drawable/user_image"
            android:src="@drawable/image1" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:visibility="visible"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/twodots"
                    android:text="User"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Ashish Kumar"
                    android:textColor="#80000000"
                    android:textSize="@dimen/dimen_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/twodots"
                    android:text="Mobile Number"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="09876543210"
                    android:textColor="#80000000"
                    android:textSize="@dimen/dimen_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/twodots"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="user@gmail.com"
                    android:textColor="#80000000"
                    android:textSize="@dimen/dimen_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/twodots"
                    android:text="User Type"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Owner"
                    android:textColor="#80000000"
                    android:textSize="@dimen/dimen_15"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_55"
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_55"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/colorPrimary"
        android:textSize="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:text="Edit"
        android:textColor="@color/colorWhite" />

</LinearLayout>