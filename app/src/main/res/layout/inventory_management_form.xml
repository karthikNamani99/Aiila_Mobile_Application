<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >



                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_30"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardCornerRadius="@dimen/dimen_2"
                    card_view:cardElevation="3dp"
                    >

                    <Spinner
                        android:id="@+id/spinner_brand"
                        android:layout_width="match_parent"
                        android:popupBackground="@color/colorWhite"
                        android:backgroundTint="@color/colorGray"
                        android:layout_height="@dimen/dimen_45"
                        android:prompt="@string/spinner_volume" />
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_35"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardCornerRadius="@dimen/dimen_2"
                    card_view:cardElevation="3dp"
                  >

                    <Spinner
                        android:id="@+id/spinner_type"
                        android:layout_width="match_parent"
                        android:popupBackground="@color/colorWhite"
                        android:backgroundTint="@color/colorGray"
                        android:layout_height="@dimen/dimen_45"
                        android:prompt="@string/spinner_volume" />
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/dimen_35"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_35"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardCornerRadius="@dimen/dimen_2"
                    card_view:cardElevation="3dp"
                    >

                    <Spinner
                        android:id="@+id/spinner_volume"
                        android:layout_width="match_parent"
                        android:popupBackground="@color/colorWhite"
                        android:backgroundTint="@color/colorGray"
                        android:layout_height="@dimen/dimen_45"
                        android:prompt="@string/spinner_volume" />
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/dimen_35"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_35"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardCornerRadius="@dimen/dimen_2"
                    card_view:cardElevation="3dp"
                    >

                    <Spinner
                        android:id="@+id/spinner_costprice"
                        android:layout_width="match_parent"
                        android:popupBackground="@color/colorWhite"
                        android:backgroundTint="@color/colorGray"
                        android:layout_height="@dimen/dimen_45"
                        android:prompt="@string/spinner_volume" />
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/dimen_35"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_35"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardCornerRadius="@dimen/dimen_2"
                    card_view:cardElevation="3dp"
               >

                    <Spinner
                        android:id="@+id/spinner_selling_price30ml"
                        android:layout_width="match_parent"
                        android:popupBackground="@color/colorWhite"
                        android:backgroundTint="@color/colorGray"
                        android:layout_height="@dimen/dimen_45"
                        android:prompt="@string/spinner_volume" />
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/dimen_35"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_35"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardCornerRadius="@dimen/dimen_2"
                    card_view:cardElevation="3dp"
                  >

                    <Spinner
                        android:id="@+id/spinner_selling_price45ml"
                        android:layout_width="match_parent"
                        android:popupBackground="@color/colorWhite"
                        android:backgroundTint="@color/colorGray"
                        android:layout_height="@dimen/dimen_45"
                        android:prompt="@string/spinner_volume" />
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/dimen_35"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_35"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardCornerRadius="@dimen/dimen_2"
                    card_view:cardElevation="3dp"
                    >

                    <Spinner
                        android:id="@+id/spinner_selling_price60ml"
                        android:layout_width="match_parent"
                        android:popupBackground="@color/colorWhite"
                        android:backgroundTint="@color/colorGray"
                        android:layout_height="@dimen/dimen_45"
                        android:prompt="@string/spinner_volume" />
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/dimen_35"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_35"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardCornerRadius="@dimen/dimen_2"
                    card_view:cardElevation="3dp"
                  >

                    <Spinner
                        android:id="@+id/spinner_discounts"
                        android:layout_width="match_parent"
                        android:popupBackground="@color/colorWhite"
                        android:backgroundTint="@color/colorGray"
                        android:layout_height="@dimen/dimen_45"
                        android:prompt="@string/spinner_volume" />
                </androidx.cardview.widget.CardView >

                <Button
                    android:id="@+id/slotSubmitButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45"
                    android:layout_below="@+id/volume_spinner_layout"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:background="@drawable/button_back"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="done"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>