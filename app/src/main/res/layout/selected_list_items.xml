<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:visibility="visible"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_item_image_view"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/wine_glass"
                android:backgroundTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/home_item_textView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/home_item_image_view"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:text="Mecallean 12 Years"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen_16"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/home_item_textView1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_below="@+id/home_item_image_view"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingRight="@dimen/dimen_40"
            android:text="Whiskey"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_40">

            <TextView
                android:id="@+id/home_item_textView2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30"
                android:layout_below="@+id/home_item_image_view"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Price :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_item_textView3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30"
                android:layout_below="@+id/home_item_image_view"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dimen_8"
                android:gravity="center"
                android:text="$3000"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dimen_14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dimen_20"
            android:paddingRight="@dimen/dimen_40">

            <TextView
                android:id="@+id/home_item_textView4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30"
                android:layout_below="@+id/home_item_image_view"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Volume :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_item_textView5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30"
                android:layout_below="@+id/home_item_image_view"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dimen_8"
                android:gravity="center|start"
                android:text="2L"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dimen_14"
                android:textStyle="bold" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2"

            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_10">

                <TextView
                    android:id="@+id/home_item_textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_below="@+id/home_item_image_view"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Selling Price :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_item_textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_below="@+id/home_item_image_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:gravity="center|start"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/dimen_14"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|end"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimen_10">

                <TextView
                    android:id="@+id/home_item_textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_below="@+id/home_item_image_view"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Discount :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_item_textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_below="@+id/home_item_image_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:gravity="center|start"
                    android:text="10%"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/dimen_14"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginBottom="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/rounded_line_blue_bg"
                android:orientation="horizontal"
               >

                <TextView
                    android:id="@+id/home_item_textView14"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/right_rectangle"
                    android:text="60ml"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dimen_12"
                  />

                <TextView
                    android:id="@+id/home_item_textView13"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="40$"
                    android:background="@drawable/left_rectangle"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dimen_12"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/rounded_line_blue_bg"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/home_item_textView10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/right_rectangle"
                    android:text="45ml"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dimen_12"
                     />

                <TextView
                    android:id="@+id/home_item_textView11"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/left_rectangle"
                    android:text="20$"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dimen_12"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_line_blue_bg"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/home_item_textView12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="30ml"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dimen_12"
                   />

                <TextView
                    android:id="@+id/home_item_textView15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/left_rectangle"
                    android:text="10$"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dimen_12"
                   />
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>