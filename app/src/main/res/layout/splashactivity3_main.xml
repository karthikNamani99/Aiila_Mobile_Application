<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:text="ANALYTICS"
            android:layout_margin="@dimen/dimen_15"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_20"
            android:gravity="center"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dimen_330"
            android:layout_height="@dimen/dimen_330"
            android:src="@drawable/graph2"
            app:civ_border_width="@dimen/dimen_35"
            app:civ_border_color="@color/colorPrimary"/>
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:text="Analytics your machine"
            android:layout_margin="@dimen/dimen_15"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_15"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/dimen_55"
          android:gravity="end"
          android:layout_weight="1">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_55"
            android:layout_below="@+id/textview"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/colorWhite"
            app:indicatorName="BallPulseIndicator"
            />
      </LinearLayout>
        <TextView
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:text="Done"
            android:layout_weight="1"
            android:paddingRight="@dimen/dimen_20"
            android:drawableRight="@drawable/move"
            android:textColor="#ffffff"
            android:gravity="center|end"
            android:textSize="@dimen/dimen_18"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>