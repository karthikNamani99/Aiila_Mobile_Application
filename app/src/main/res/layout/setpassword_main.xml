<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150"
        android:background="@color/colorPrimaryDark"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dimen_85"
            android:layout_height="@dimen/dimen_85"

            android:src="@mipmap/ailaa_logo" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_55"
        android:layout_marginTop="@dimen/dimen_55"
        android:layout_marginRight="@dimen/dimen_55"
        android:inputType="textPassword"
        android:textSize="@dimen/dimen_15"
        android:textColorHint="#80000000"
        android:textColor="@color/colorBlack"
        android:background="@drawable/background_edittext"
        android:hint="Password"
        android:paddingLeft="@dimen/dimen_12" />

    <EditText
        android:id="@+id/edit_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_55"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_55"
        android:inputType="textPassword"
        android:textSize="@dimen/dimen_15"
        android:textColorHint="#80000000"
        android:textColor="@color/colorBlack"
        android:background="@drawable/background_edittext"
        android:hint="Confirm Password"
        android:paddingLeft="@dimen/dimen_12" />



    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_55"
        android:layout_marginTop="@dimen/dimen_35"
        android:layout_marginRight="@dimen/dimen_55"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/colorPrimary"
        android:textSize="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:text="submit"
        android:textColor="@color/colorWhite" />


    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:text="Login Here!"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dimen_15"
        android:textStyle="bold" />




</LinearLayout>