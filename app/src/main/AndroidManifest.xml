<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aiila_mobile_application">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splash_screens_activities.SplashActivity_main"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.Main_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".activities.SlotConfiguration"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".activities.Forgot_Password_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".activities.Mobile_Verification_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".activities.Register_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".activities.SetPassword_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".activities.Login_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".splash_screens_activities.SplashActivity1"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".splash_screens_activities.SplashActivity2"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity android:name=".splash_screens_activities.SplashActivity3"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
    </application>

</manifest>